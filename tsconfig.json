{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,

    // Why even do typescript?
    "noImplicitAny": false,
    
    "strictNullChecks": true,
    "skipLibCheck": true,
  }
}
